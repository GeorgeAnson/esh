<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>esh</display-name>
  <welcome-file-list>
    <welcome-file>/default_cn.html</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>index_url</param-name>
    <param-value>/home.html</param-value>
  </context-param>
  <servlet>
    <servlet-name>dispatcherServlet</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>classpath:springmvc.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>dispatcherServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
			classpath:applicationContext.xml
		</param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <filter>
    <filter-name>characterEncodingFilter</filter-name>
    <filter-class>com.esh.filter.SetCharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>characterEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>hiddenHttpMethodFilter</filter-name>
    <filter-class>org.springframework.web.filter.HiddenHttpMethodFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>hiddenHttpMethodFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>com.esh.listener.OnLineListener</listener-class>
  </listener>
  <session-config>
    <session-timeout>10</session-timeout>
  </session-config>
  <filter>
    <filter-name>userFilter</filter-name>
    <filter-class>com.esh.filter.UserFilter</filter-class>
    <init-param>
      <param-name>pass</param-name>
      <param-value>/home.html;/logOff;/userMenu;/nav;/getAcupList;/getAcupInfo;/getAcupOpInfo;/getHistOpData;/userInfo;/question</param-value>
    </init-param>
    <init-param>
      <param-name>error_url</param-name>
      <param-value>/default_cn.html</param-value>
    </init-param>
    <init-param>
      <param-name>userConstants</param-name>
      <param-value>user</param-value>
    </init-param>
    <init-param>
      <param-name>init_config</param-name>
      <param-value>/;/Config.html;/default_cn.html;/cover.html;/signin.html;/signupSec.html;/signIn;/signUp;/chat.html;/chatPanel.html;/selectEquit.html;/describle.html;/editor.html;/questionnaire.html;/selectMode.html;/treat.html;/userMenu.html;.*.txt;.*.js;.*.css;.*.png;.*.woff;.*.ttf;.*.svg;.*.gif;.*.js.map;.*.jpg</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>userFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>loginAction</servlet-name>
    <servlet-class>com.esh.proxy.DelegatingServletProxy</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>loginAction</servlet-name>
    <url-pattern>/signIn</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>registerAction</servlet-name>
    <servlet-class>com.esh.proxy.DelegatingServletProxy</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>registerAction</servlet-name>
    <url-pattern>/signUp</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>logoutAction</servlet-name>
    <servlet-class>com.esh.proxy.DelegatingServletProxy</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>logoutAction</servlet-name>
    <url-pattern>/logOff</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>urlAction</servlet-name>
    <servlet-class>com.esh.proxy.DelegatingServletProxy</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>urlAction</servlet-name>
    <url-pattern>/userMenu</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>navAction</servlet-name>
    <servlet-class>com.esh.proxy.DelegatingServletProxy</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>navAction</servlet-name>
    <url-pattern>/nav</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>suggestAction</servlet-name>
    <servlet-class>com.esh.proxy.DelegatingServletProxy</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>suggestAction</servlet-name>
    <url-pattern>/getAcupList</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>acupointAction</servlet-name>
    <servlet-class>com.esh.proxy.DelegatingServletProxy</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>acupointAction</servlet-name>
    <url-pattern>/getAcupInfo</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>cueDevAction</servlet-name>
    <servlet-class>com.esh.proxy.DelegatingServletProxy</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>cueDevAction</servlet-name>
    <url-pattern>/getAcupOpInfo</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>histOpAction</servlet-name>
    <servlet-class>com.esh.proxy.DelegatingServletProxy</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>histOpAction</servlet-name>
    <url-pattern>/getHistOpData</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>userInfoAction</servlet-name>
    <servlet-class>com.esh.proxy.DelegatingServletProxy</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>userInfoAction</servlet-name>
    <url-pattern>/userInfo</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>questionAction</servlet-name>
    <servlet-class>com.esh.proxy.DelegatingServletProxy</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>questionAction</servlet-name>
    <url-pattern>/question</url-pattern>
  </servlet-mapping>
</web-app>